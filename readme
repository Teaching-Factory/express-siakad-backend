# inisialisasi
yarn init
yarn add express nodemon

# uprgade nvm 16.14
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh | bash
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" (optional)
nvm install 16.14
nvm use 16.14

# install mysql2
yarn add mysql2

# install .env
yarn add dotenv 

# install sequelize 
yarn add sequelize 
npx sequelize-cli init

# install axios 
npm install axios

# migration models
npx sequelize-cli db:migrate
npx sequelize-cli db:migrate:undo (optional)
npx sequelize-cli db:migrate:undo:all (optional)

# seeder
npx sequelize-cli seed:generate --name seed-agama (creating)
npx sequelize-cli db:seed:all (ngeseed)
npx sequelize db:seed:undo --seed agama (undo seed)

# running app
yarn start

